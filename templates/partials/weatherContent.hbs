<div class="container-fluid main-content">
            <div class="row">
                <div class="col-md-10 col-12 mx-auto">
                    <div class="weatherContent">
                        <form action=""  class="temp_form">
                            <input type="text" id="cityName" placeholder="Enter city name here" autocomplete="off" />
                            <input type="submit" value="search" id="submitBtn" />
                        </form>
                    </div>
                    <div class="temp_info">
                        <div class="top-layer">
                                <p id="day">Day</p>
                                <p id="date">Date</p>
                        </div>
                        <div class="main-layer">
                                <p id="city-name">Get output here</p>
                                <div class="temp-result temp_status">
                                    <p id="temp"><span id="temp-span">0</span><sup>o</sup> C </p>
                                    <p id="temp-status"> <i class="fa fa-cloud" aria-hidden="true"></i></p>
                                </div>

                        </div>
                    </div>
                </div>
                </div>
            </div>